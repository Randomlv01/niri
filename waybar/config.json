// -*- mode: jsonc -*-
{
    "layer": "top", 
    "position": "top", 
    "height": 30, 
    "spacing": 4, 

    // sway niri hyprland
    "modules-left": [
        "niri/workspaces"
        //"niri/window"
    ],
    "modules-center": [
    	"clock"
    ],

    "modules-right": [
        "pulseaudio",
        "custom/sep",
        "cpu",
        "custom/sep",
        "memory",
	"custom/sep",
	"tray",
	"custom/power",
	"custom/space",
    ],

    // Modules configuration
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{name}",
        "persistent-workspaces": {
            "*" : 9
        }
    },


      "custom/power": {
              "format": "󰐥",
	              "on-click": "wlogout"
		          },

  "custom/space": {
	"format": " ",
  },

  "pulseaudio": {
        "format": "{icon}",
	"tooltip-format": "{icon} {volume}%", 
	      "format-muted": "",
	            "format-icons": {
		              "default": ["", "", " "]
			            },
				          "on-click": "pavucontrol",
					        "scroll-step": 5
						  },



 "sway/workspaces": {
       "disable-scroll": true,
             "all-outputs": true,
	           "warp-on-scroll": false,
		         "format": "{name}",
			       "persistent-workspaces": {
			                "1": [],
					         "2": [],
						          "3": [],
							           "4": [],
								            "5": [],
									             "6": [],
										              "7": [],
											               "8": [],
												                "9": []
														    }
														    },

    "niri/window" : {
        "max-length": 40,
        "seperate-outputs": false
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
        // "icons": {
        //   "blueman": "bluetooth",
        //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
        // }
    },
    "clock": {
    	"format": "{:%D - %H:%M}",
        "format-alt": "{:%Y-%m-%d}"
    },
    "cpu": {
        "format": "",
        "tooltip": true,
	"tooltip-format": " {usage}%"
    },
    "memory": {
    	"tooltip-format": " {used}GiB",
        "format": ""
    },
    "custom/sep": {
        "format" : "|",
        "interval" : 0
    }
}
